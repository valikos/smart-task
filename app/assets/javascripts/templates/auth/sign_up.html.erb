<div class="container" style="margin-top:40px">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong> Sign up to start</strong>
        </div>
        <div class="panel-body">
          <form>
            <fieldset>
              <div class="row">
                <div class="center-block">
                  <%= image_tag 'avatar.png', class: 'img-circle center-block profile-img' -%>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-user"></i>
                      </span>
                      <input class="form-control credentials-email" placeholder="Email" name="email" type="text" autofocus
                      ng-model="credentials.email">
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-lock"></i>
                      </span>
                      <input class="form-control credentials-password" placeholder="Password" name="password" type="password" value=""
                      ng-model="credentials.password">
                    </div>
                  </div>
                  <div class="form-group">
                    <input type="submit" class="btn btn-lg btn-primary btn-block credentials-submit" value="Sign up"
                    ng-click="signUp()">
                  </div>
                </div>
              </div>
            </fieldset>
          </form>
        </div>
        <div class="panel-footer">
          Already have an account! <a href="#/sign_in" onClick="">Sign In Here</a>
        </div>
      </div>
    </div>
  </div>
</div>